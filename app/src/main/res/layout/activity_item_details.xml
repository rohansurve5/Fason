<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ItemDetails">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/toolbar"
        android:layout_height="65dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_search_24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_baseline_notifications_24"/>



    </LinearLayout>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_below="@+id/toolbar"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:src="@drawable/image_details"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="#2a2a2a"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:lineSpacingExtra="8sp"
                    android:text="Black turtleneck top"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="#667eea"
                    android:layout_marginLeft="24dp"
                    android:lineSpacingExtra="7sp"
                    android:text="$42"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="23.5dp"
                    android:layout_marginRight="16dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10.5dp"
                        android:layout_marginBottom="10.5dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="21dp"
                            android:paddingRight="21dp"
                            android:background="@drawable/btn_small_rounded_bg"
                            android:textColor="#ffffff"
                            android:lineSpacingExtra="6sp"
                            android:text="4.5"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/seguisb"
                            android:textColor="#2a2a2a"
                            android:lineSpacingExtra="6sp"
                            android:text="Very Good"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/seguisb"
                            android:layout_gravity="center"
                            android:textColor="#667eea"
                            android:lineSpacingExtra="5sp"
                            android:text="49 Reviews"
                            />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:rotation="-180"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_back_ios_24"
                            app:tint="#667eea" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#2a2a2a"
                    android:layout_marginTop="15.5dp"
                    android:fontFamily="@font/segoe_ui"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:lineSpacingExtra="3.2sp"
                    android:gravity="center_horizontal"
                    android:text="Description"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="5"
                    android:layout_marginTop="10.5dp"
                    android:textColor="#656565"
                    android:fontFamily="@font/segoe_ui"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:lineSpacingExtra="9sp"
                    android:text="@string/long_dummytext"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15.5dp"
                    android:background="#dadada" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#2a2a2a"
                        android:fontFamily="@font/seguisb"
                        android:layout_marginRight="15dp"
                        android:paddingTop="17.5dp"
                        android:paddingBottom="17.5dp"
                        android:lineSpacingExtra="6sp"
                        android:text="Select Size"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#2a2a2a"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="17.5dp"
                        android:fontFamily="@font/seguisb"
                        android:paddingBottom="17.5dp"
                        android:lineSpacingExtra="6sp"
                        android:text="Select Color"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dadada" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="25.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#2a2a2a"
                        android:paddingBottom="14dp"
                        android:paddingRight="21dp"
                        android:paddingLeft="21dp"
                        android:paddingTop="14dp"
                        android:background="@drawable/grey_bg_gradient"
                        android:lineSpacingExtra="3.2sp"
                        android:gravity="center_horizontal"
                        android:text="S"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:paddingBottom="14dp"
                        android:paddingRight="21dp"
                        android:paddingLeft="21dp"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="14dp"
                        android:background="@drawable/btn_small_rounded_bg"
                        android:lineSpacingExtra="3.2sp"
                        android:gravity="center_horizontal"
                        android:text="M"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#2a2a2a"
                        android:paddingBottom="14dp"
                        android:paddingRight="21dp"
                        android:paddingLeft="21dp"
                        android:paddingTop="14dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/grey_bg_gradient"
                        android:lineSpacingExtra="3.2sp"
                        android:gravity="center_horizontal"
                        android:text="XL"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#2a2a2a"
                        android:paddingBottom="14dp"
                        android:paddingRight="21dp"
                        android:paddingLeft="21dp"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="14dp"
                        android:background="@drawable/grey_bg_gradient"
                        android:lineSpacingExtra="3.2sp"
                        android:gravity="center_horizontal"
                        android:text="XXL"
                        />

                </LinearLayout>









            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#e1e1e1"
            android:textColor="#2a2a2a"
            android:lineSpacingExtra="7sp"
            android:text="ADD TO CART"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="#667eea"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="BUY NOW"
            />
    </LinearLayout>



</RelativeLayout>